@model IEnumerable<FlowerStore.Models.Flower>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Card.css" rel="stylesheet">
<main role="main">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/imgs/flowers-hero.jpeg" class="carousel-img"/>
            </div>
            <div class="carousel-item">
                <img src="~/imgs/Flower2.jpeg" class="carousel-img"/>
            </div>
            <div class="carousel-item">
                <img src="~/imgs/hydrangea-care.jpg" class="carousel-img" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img src=@item.Image class="card-img-top" alt=@item.Name height="300">
                            </a>
                            <div class="card-body">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <h5 class="card-title">@item.Name</h5>
                                </a>
                                <h6 class="card-subtitle mb-2 text-muted">$@item.price</h6>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

